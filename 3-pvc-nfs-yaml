apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: jellyfin-nfs-pvc
  namespace: jellyfin
spec:
  accessModes:
    - ReadWriteMany
  storageClassName: ""
  resources:
    requests:
      storage: 500Gi          # Match the PV size
  volumeName: jellyfin-nfs-pv # Bind to the above PV explicitly